<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setup_bkg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/setup_scroll"
        android:layout_width="140dp"
        android:layout_height="280dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp" >

        <ScrollView
            android:id="@+id/setup_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.dnake.widget.Button2
                    android:id="@+id/setup_btn_passwd"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:background="@drawable/setup_btn_passwd"
                    android:gravity="left|center"
                    android:paddingLeft="38dp"
                    android:text="@string/setup_btn_passwd"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/setup_div"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/setup_scroll"
        android:src="@drawable/setup_div" />

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="280dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/setup_div" >

        <RelativeLayout
            android:id="@+id/setup_layout_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/setup_passwd_old_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:text="@string/setup_passwd_old"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/setup_passwd_old"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_alignBaseline="@+id/setup_passwd_old_text"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/setup_passwd_old_text"
                android:paddingBottom="8dip"
                android:inputType="numberPassword"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setup_passwd_new_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="60dp"
                android:text="@string/setup_passwd_new"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/setup_passwd_new"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_alignBaseline="@+id/setup_passwd_new_text"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/setup_passwd_new_text"
                android:paddingBottom="8dip"
                android:inputType="numberPassword"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setup_passwd_confirm_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="100dp"
                android:text="@string/setup_passwd_confirm"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/setup_passwd_confirm"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_alignBaseline="@+id/setup_passwd_confirm_text"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/setup_passwd_confirm_text"
                android:paddingBottom="8dip"
                android:inputType="numberPassword"
                android:textSize="18sp" />

            <com.dnake.widget.Button2
                android:id="@+id/setup_passwd_ok"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="208dp"
                android:background="@drawable/setup_btn_ok"
                android:text="@string/setup_btn_ok"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>