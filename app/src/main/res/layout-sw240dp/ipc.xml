<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ipc_bkg" >

    <ImageView
        android:id="@+id/ipc_view_label"
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/ipc_err_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipc_view_label"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ipc_view_label" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ipc_text_bkg" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/ipc_btn_start_b" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_start"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/ipc_btn_start" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="119dp"
            android:src="@drawable/ipc_btn_start_b" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_stop"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126dp"
            android:background="@drawable/ipc_btn_stop" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_left"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/ipc_btn_left" />

        <Button
            android:id="@+id/ipc_btn_unit"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/ipc_btn_unit"
            android:textColor="#000000"
            android:textSize="12sp" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_right"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/ipc_btn_right" />
    </RelativeLayout>

</RelativeLayout>