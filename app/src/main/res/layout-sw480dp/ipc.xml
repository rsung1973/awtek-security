<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ipc_bkg" >

    <ImageView
        android:id="@+id/ipc_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ipc_view" />

    <TextView
        android:id="@+id/ipc_err_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipc_view_label"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:textIsSelectable="false"
        android:textSize="32sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ipc_view_label" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ipc_btn_start_b" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/ipc_btn_start" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/ipc_btn_start_b" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="273dp"
            android:background="@drawable/ipc_btn_stop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/ipc_text_bkg" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/ipc_btn_left" />

        <Button
            android:id="@+id/ipc_btn_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="122dp"
            android:background="@drawable/ipc_btn_unit"
            android:textColor="#000000"
            android:textSize="26sp" />

        <com.dnake.widget.Button2
            android:id="@+id/ipc_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/ipc_btn_right" />
    </RelativeLayout>

</RelativeLayout>