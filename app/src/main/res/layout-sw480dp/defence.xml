<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sub_bkg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <com.dnake.widget.Button2
            android:id="@+id/defence_btn_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/defence_btn_out_a"
            android:gravity="bottom|center"
            android:text="@string/defence_btn_out"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/defence_btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/defence_btn_home_a"
            android:gravity="bottom|center"
            android:text="@string/defence_btn_home"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/defence_btn_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="440dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/defence_btn_sleep_a"
            android:gravity="bottom|center"
            android:text="@string/defence_btn_sleep"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/defence_btn_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/defence_btn_home"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="660dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/defence_btn_withdraw_a"
            android:gravity="bottom|center"
            android:text="@string/defence_btn_withdraw"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/loopAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/defence_btn_withdraw"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FF0000"
            android:text="保全迴路異常，請檢查!!"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/delayAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loopAlarm"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#00FF00"
            android:text=""
            android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>